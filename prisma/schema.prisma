generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          String   @id @default(uuid())
  stripeId    String   @unique
  displayName String
  description String
  price       Int
  groupName   String
  groupIndex  Int
  isActive    Boolean
  answer      Answer[]
  enablers    String[]
  disablers   String[]
}

model Answer {
  id         String   @id @default(uuid())
  userName   String
  formValues String
  sessionId  String
  isActive   Boolean
  createdAt  DateTime
  ticket     Ticket   @relation(fields: [ticketId], references: [id])
  ticketId   String
}
